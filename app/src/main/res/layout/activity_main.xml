<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TextInputEditTextNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/introduz_o_numero"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewRandom"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="20dp"
        android:text="@string/numero_randomico" />

    <TextView
        android:id="@+id/textViewTentativas"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_margin="20dp"
        android:text="@string/tentativas" />

    <TextView
        android:id="@+id/textViewJogo"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/textViewPerdeu"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="364dp"
        android:layout_height="38dp"
        android:layout_margin="20dp" />


    <Button
        android:id="@+id/buttonEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="TentarSorte"
        android:text="@string/enviar" />


</LinearLayout>